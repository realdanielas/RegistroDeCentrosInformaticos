@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Login";
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body style="font-family: 'Montserrat', sans-serif; margin: -7px; padding: 0px;">
    <div class="row-cols-2 d-flex align-content-center justify-content-evenly">
        <div class="col w-50" style="background-color: #262626; padding: 10%;">
            <form asp-action="ValidarUsuario">
                <div class="text-light text-center">
                    <h1 class="fw-normal">¡Bienvenido al</h1>
                    <h4 class="fw-bold">Registro de Centros Informáticos</h4>
                </div>
                <div class="text-light">
                    <div class="my-5">
                        <div class="col">
                            <label>Correo</label>
                        </div>
                        <div class="col">
                            @Html.TextBox("correo", "", new { @class = "form-control rounded-4 text-light", type = "email", style = "background-color: #525252;", placeholder = "name@catolica.edu.sv" })
                        </div>
                    </div>
                    <div class="my-5">
                        <div class="col">
                            <label>Contraseña</label>
                        </div>
                        <div class="col">
                            @Html.TextBox("passve", "", new { @class = "form-control rounded-4 text-light", type = "password", style = "background-color: #525252;" })
                        </div>
                    </div>
                    <!--Comprobacion por si hay algun mensaje enviado proveniente del backend-->
                    @if (!string.IsNullOrEmpty(ViewBag.MensajeError))
                    {
                        <div class="alert alert-warning" role="alert">
                            @ViewBag.MensajeError
                        </div>
                    }
                    @section scripts {

                    }
                    <input type="submit" class="btn rounded-4 text-light px-4" style="background-color: #a10000;" value="Iniciar Sesión" />
                </div>
            </form>
        </div>
        <div class="col w-50 justify-content-evenly justify-content-lg-center justify-content-md-center justify-content-sm-center justify-content-xl-center">
            <img src="~/Images/LoginBG.png" class="img-fluid w-auto mh-100" style="background-size:cover;" />
        </div>
    </div>
    


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>