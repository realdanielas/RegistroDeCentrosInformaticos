@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}
@{
    Layout = "_Layout";
    ViewData["Title"] = "Ajustes";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body style="font-family: 'Montserrat', sans-serif;">
    <div class="container mt-5">
        <div class="row">
            <!-- Card Perfil de Cliente -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header text-white" style="background-color: #781113;">
                        PERFIL DE CLIENTE
                    </div>
                    <div class="card-body text-center" style="background-color: #f8f9fa;">
                        <div class="mb-3">
                            <strong>Nombre:</strong>
                            <p id="clientName">@ViewBag.NombreUsuario</p>
                            <p id="clientSurname">@ViewBag.ApellidoUsuario</p>
                        </div>
                        <div class="mb-3">
                            <strong>Carnet:</strong>
                            <p id="clientCarnet">@ViewBag.CarnetUsuario</p>
                        </div>
                        <div class="mb-3">
                            <strong>Correo:</strong>
                            <p id="clientEmail">@ViewBag.CorreoUsuario</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>