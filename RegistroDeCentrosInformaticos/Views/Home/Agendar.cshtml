@using Newtonsoft.Json
@{
    Layout = "_Layout";
    ViewData["Title"] = "Agendar";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <h2>Agendar Prestamo</h2>
    <form asp-action="AgendarUsuario">
        <input type="hidden" name="hour" value="@ViewBag.Hour" />
        <input type="hidden" name="day" value="@ViewBag.Day" />

        <div class="form-group">
            <label for="nombres" class="fw-bold">Nombres(s):</span></label>
            @Html.TextBox("nombres", "", new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="apellidos" class="fw-bold">Apellido(s):</span></label>
            @Html.TextBox("apellidos", "", new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="carnet" class="fw-bold">Carnet:</span></label>
            @Html.TextBox("carnet", "", new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label for="idcomputo" class="fw-bold">Aula:</span></label>
            @Html.TextBox("idcomputo", "", new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="idestado" class="fw-bold">Estado:</span></label>
            @Html.TextBox("idestado", "", new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="hora_entrada" class="fw-bold">Entrada:</span></label>
            @Html.TextBox("hora_entrada", "", new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="hora_salida" class="fw-bold">Salida:</span></label>
            @Html.TextBox("hora_salida", "", new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label for="comentario" class="fw-bold">Comentarios adicionales:</span></label>
            @Html.TextBox("comentario", "", new { @class = "form-control" })
        </div>
        <div class="d-flex justify-content-end">
            <!-- Utiliza un botón de tipo "button" para evitar envíos de formulario -->
            <input type="submit" class="btn btn-primary btn-lg" style="background-color: #781113;  padding-bottom" value="Guardar" />
        </div>
    </form>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
